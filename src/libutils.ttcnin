#ifndef LIBUTILS_H
#define LIBUTILS_H

#define ASSERT(_cond, args...) do {								\
	if ((_cond) == false) {										\
		log("Assertion failed: ", #_cond, " ", ## args);		\
		setverdict(fail);										\
		stop;													\
	}															\
} while (false)

#endif /* LIBUTILS_H */
